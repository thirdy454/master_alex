<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsextrabold"
            android:text="Input a product details"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="parent"
             />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"

            android:paddingRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="1dp">
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">



            <TextView
                android:id="@+id/ds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textStyle="bold"
                android:textSize="10dp"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"

                />


            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:background="@color/textBox"
                android:fontFamily="@font/poppinsregular"
                android:hint="Product Name"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textSize="15dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppinsregular"
                />


            <EditText
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:hint="Product Price"
                android:inputType="number"

                android:layout_height="wrap_content"
                android:background="@color/textBox"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:textSize="15dp" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STOCKS"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsregular"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"

                />


            <EditText
                android:id="@+id/txt_stocks"
                android:layout_width="match_parent"
                android:hint="Product Stocks"
                android:fontFamily="@font/poppinsregular"
                android:layout_height="wrap_content"
                android:background="@color/textBox"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:textSize="15dp"
                android:inputType="number"
                />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_addproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/PrimColor"
                android:text="ADD PRODUCT"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp">
            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/SecondaryColor"
                android:text="Load Product"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp">
            </androidx.appcompat.widget.AppCompatButton>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/triColo"
                android:text="Update Product"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp">
            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete_stocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/triColo"
                android:text="Delete Stocks"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp">
            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/triColo"
                android:text="Update Product"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp">
            </androidx.appcompat.widget.AppCompatButton>


            <TextView
                android:id="@+id/output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/poppinsmedium"
                android:text=""
                ></TextView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>